<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/blackRussian"
>
    <TextView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end"
        android:text=""
        android:layout_marginTop="40sp"
        android:layout_marginRight="10sp"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:singleLine="true"
    />
    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end"
        android:text=""
        android:layout_marginRight="10sp"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:singleLine="true"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/clear"
            android:text="CE"
            style="@style/ActionButtonBlueStyle"
        />
        <TextView
            android:id="@+id/startBracket"
            android:text="("
            style="@style/ActionButtonBlueStyle"
        />
        <TextView
            android:id="@+id/closeBracket"
            android:text=")"
            style="@style/ActionButtonBlueStyle"
        />
        <TextView
            android:id="@+id/actionDivide"
            android:text="/"
            style="@style/ActionButtonRedStyle"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/num7"
            android:text="7"
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/num8"
            android:text="8"
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/num9"
            android:text="9"
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/actionMultiply"
            android:text="*"
            style="@style/ActionButtonRedStyle"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/num4"
            android:text="4"
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/num5"
            android:text="5"
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/num6"
            android:text="6"
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/actionMinus"
            android:text="-"
            style="@style/ActionButtonRedStyle"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/num1"
            android:text="1"
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/num2"
            android:text="2"
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/num3"
            android:text="3"
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/actionAdd"
            android:text="+"
            style="@style/ActionButtonRedStyle"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/numDot"
            android:text="."
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/num0"
            android:text="0"
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/actionBack"
            android:text="âŒ«"
            style="@style/ActionButtonWhiteStyle"
        />
        <TextView
            android:id="@+id/actionEquals"
            android:text="="
            style="@style/ActionButtonRedStyle"
        />
    </LinearLayout>
</LinearLayout>